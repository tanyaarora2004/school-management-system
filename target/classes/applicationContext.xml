<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- MySQL DataSource -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/schooldb?allowPublicKeyRetrieval=true&amp;useSSL=false&amp;serverTimezone=UTC"/>
        <property name="username" value="root"/>
        <property name="password" value="Tanyaar@1012"/>
    </bean>

    <!-- JdbcTemplate -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <!-- ====================== Student Beans ====================== -->

    <!-- DAO -->
    <bean id="studentDao" class="com.example.dao.StudentDaoImpl">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <!-- Service -->
    <bean id="studentService" class="com.example.service.StudentServiceImpl">
        <property name="studentDao" ref="studentDao"/>
    </bean>

    <!-- ====================== Attendance Beans ====================== -->

    <!-- Attendance DAO -->
    <bean id="attendanceDao" class="com.example.dao.AttendanceDaoImpl">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <!-- Attendance Service -->
    <bean id="attendanceService" class="com.example.service.AttendanceServiceImpl">
        <property name="attendanceDao" ref="attendanceDao"/>
    </bean>


</beans>
